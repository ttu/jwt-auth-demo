{
  "name": "fake-oauth-server",
  "version": "1.0.0",
  "description": "A fake OAuth server for testing OAuth flows",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/views dist/",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,js,json,ejs}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,ejs}\"",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:check": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix"
  },
  "dependencies": {
    "@types/ejs": "^3.1.5",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  }
}
