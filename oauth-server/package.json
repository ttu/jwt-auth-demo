{
  "name": "fake-oauth-server",
  "version": "1.0.0",
  "description": "A fake OAuth server for testing OAuth flows",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/views dist/",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,js,json,ejs}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,ejs}\""
  },
  "dependencies": {
    "@types/ejs": "^3.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
