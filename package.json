{
  "name": "jwt-auth-demo",
  "version": "1.0.0",
  "description": "JWT Authentication Demo - React + Node.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "npm run build:backend && npm run build:oauth && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:oauth": "cd oauth-server && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:oauth\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start",
    "start:oauth": "cd oauth-server && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:oauth\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:oauth": "cd oauth-server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../oauth-server && npm install && cd ../integration-tests && npm install && cd ..",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules oauth-server/node_modules integration-tests/node_modules",
    "test:unit": "npm run test:unit:backend && npm run test:unit:oauth",
    "test:unit:backend": "cd backend && npm test",
    "test:unit:oauth": "cd oauth-server && npm test",
    "test:integration": "cd integration-tests && npm test",
    "test:integration:ci": "cd integration-tests && npm run test:ci",
    "test:integration:debug": "cd integration-tests && npm run test:debug",
    "test:integration:ui": "cd integration-tests && npm run test:ui",
    "test:integration:headed": "cd integration-tests && npm run test:headed",
    "install:integration": "cd integration-tests && npm run install-deps",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:backend": "prettier --write \"backend/src/**/*.{ts,js,json}\"",
    "format:frontend": "prettier --write \"frontend/src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:oauth": "prettier --write \"oauth-server/src/**/*.{ts,js,json,ejs}\"",
    "format:tests": "prettier --write \"integration-tests/tests/**/*.{ts,js,json}\"",
    "format:all": "npm run format:backend && npm run format:frontend && npm run format:oauth && npm run format:tests",
    "lint": "eslint .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:backend": "eslint \"backend/src/**/*.{ts,js}\"",
    "lint:frontend": "eslint \"frontend/src/**/*.{ts,tsx,js,jsx}\"",
    "lint:oauth": "eslint \"oauth-server/src/**/*.{ts,js}\"",
    "lint:tests": "eslint \"integration-tests/tests/**/*.{ts,js}\"",
    "lint:all": "npm run lint:backend && npm run lint:frontend && npm run lint:oauth && npm run lint:tests",
    "audit": "npm audit --audit-level=moderate",
    "audit:backend": "cd backend && npm audit --audit-level=moderate",
    "audit:frontend": "cd frontend && npm audit --audit-level=moderate",
    "audit:oauth": "cd oauth-server && npm audit --audit-level=moderate",
    "audit:tests": "cd integration-tests && npm audit --audit-level=moderate",
    "audit:all": "npm run audit && npm run audit:backend && npm run audit:frontend && npm run audit:oauth && npm run audit:tests"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2"
  }
}
