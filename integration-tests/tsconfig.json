{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"],
    "resolveJsonModule": true
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", "test-results", "playwright-report"]
}
