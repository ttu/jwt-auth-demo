{
  "name": "jwt-auth-demo-integration-tests",
  "version": "1.0.0",
  "description": "JWT Authentication Demo - Integration Tests",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "test": "playwright test",
    "test:ci": "playwright test --reporter=list",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:oauth": "playwright test oauth-flow.spec.ts",
    "test:oauth:debug": "playwright test oauth-flow.spec.ts --debug",
    "test:oauth:ui": "playwright test oauth-flow.spec.ts --ui",
    "test:oauth:headed": "playwright test oauth-flow.spec.ts --headed",
    "test:standalone": "playwright test --project=frontend-standalone",
    "test:standalone:debug": "playwright test --project=frontend-standalone --debug",
    "test:standalone:ui": "playwright test --project=frontend-standalone --ui",
    "test:standalone:headed": "playwright test --project=frontend-standalone --headed",
    "install-deps": "npx playwright install",
    "postinstall": "playwright install --with-deps",
    "format": "prettier --write \"tests/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"tests/**/*.{ts,js,json}\"",
    "lint": "eslint --config .eslintrc.cjs \"tests/**/*.{ts,js}\"",
    "lint:check": "eslint --config .eslintrc.cjs \"tests/**/*.{ts,js}\"",
    "lint:fix": "eslint --config .eslintrc.cjs \"tests/**/*.{ts,js}\" --fix"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "prettier": "^3.0.0"
  }
}
